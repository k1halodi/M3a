{
    "shop": {
        "currency": "EGP",
        "language": "en",
        "weightUnit": "kg"
    },
    "themeConfig": {
        "logo": {
            "alt": "M3aaStore",
            "src": "/Logo.png",
            "width": 35,
            "height": 35
        },
        "colors": {
            "primary": "#ff5a5f",
            "secondary": "#ff5a5f",
            "background": "#F1F1F1"
        },
        "headTags": {
            "links": [
                {
                    "rel": "icon",
                    "href": "Logo.png"
                },
                {
                    "rel": "stylesheet",
                    "href": "https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
                }
            ],
            "metas": [],
            "scripts": []
        },
        "copyRight": "Â© 2024 M3aaStore. All Rights Reserved."
    },
    "pricing": {
        "tax": {
            "rounding": "round",
            "precision": 2,
            "round_level": "unit",
            "price_including_tax": true,
            "rate": 0.14
        }
    },
    
        "customer": {
            "addressSchema": {
                "type": "object",
                "properties": {
                    "full_name": {
                        "type": "string"
                    },
                    "telephone": {
                        "type": ["string", "number"]
                    },
                    "address_1": {
                        "type": "string"
                    },
                    "address_2": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "province": {
                        "type": "string"
                    },
                    "country": {
                        "type": "string",
                        "pattern": "^[A-Z]{2}$"
                    }
                },
                "required": [
                    "full_name",
                    "telephone",
                    "address_1",
                    "city",
                    "country",
                    "province"
                ],
                "errorMessage": {
                    "properties": {
                        "full_name": "Full name is required",
                        "telephone": "Telephone is missing or invalid",
                        "address_1": "translate('Address is missing or invalid",
                        "province": "Province is missing or invalid",
                        "country": "Country is missing or invalid"
                    }
                },
                "additionalProperties": true
            }
        },



    
    "catalog": {
        "product": {
            "image": {
                "thumbnail": {
                    "width": 100,
                    "height": 100
                },
                "listing": {
                    "width": 300,
                    "height": 300
                },
                "single": {
                    "width": 500,
                    "height": 500
                }
            }
        },
        "showOutOfStockProduct": false
    },




    
    "system": {
        "theme": "eve",
        "file_storage": "azure",
        "extensions": [
            {
                "name": "resend",
                "resolve": "node_modules/@evershop/resend",
                "enabled": true,
                "priority": 10
              },
            {
                "name": "product_review",
                "resolve": "node_modules/@evershop/product_review",
                "enabled": true,
                "priority": 10
            },
            {
                "name": "azure_file_storage",
                "resolve": "node_modules/@evershop/azure_file_storage",
                "enabled": true,
                "priority": 10
              }
        ]
    },
    "resend": {
    "from": "Customer Service <Support@m3aastore.live>",
    "events": {
      "order_placed": {
        "subject": "Order Confirmation",
        "enabled": true,
        "templatePath": "config/emails/order_confirmation.html" 
      },
      "reset_password": {
        "subject": "Reset Password",
        "enabled": true,
        "templatePath": "config/emails/reset_password.html" 
      },
      "customer_registered": {
        "subject": "Welcome to M3aaStore",
        "enabled": true,
        "templatePath": "config/emails/welcome.html" 
      }
    }
  }
}
            